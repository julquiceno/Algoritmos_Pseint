Algoritmo horaHMS
	// Entradas
	Definir h, m, s Como Entero;
	Escribir "Ingresar la hora (0 - 23): ";
	Leer h;
	Escribir "Ingresar los minutos (0 - 59): ";
	Leer m;
	Escribir "Ingresar los segundos (0 - 59): ";
	Leer s;
	
	// Salida
	
	Escribir "Son las ",h," horas, con ",m," minutos y ",s, " segundos";
	
FinAlgoritmo
